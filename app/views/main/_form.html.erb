<div class="flex items-center justify-center space-x-4">
  <%= form_with url: "#todo", scope: :dog, method: :post, class: "space-y-4" do |form| %>
    <div class="w-full">
      <%= form.label :breed, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :breed, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= form.submit "Submit", class: "mt-4 bg-blue-500 text-white py-2 px-4 rounded-md" %>
    </div>
  <% end %>

  <%= render partial: "main/photo", locals: { photo_url: "https://images.dog.ceo/breeds/hound-blood/n02088466_2030.jpg" }%>
</div>
